<div class="article-list">
{% for article in articles | reverse %}
  <article class="article-card">
    <h2><a href="{{ article.url | url }}">{{ article.data.title }}</a></h2>
    <div class="date">
      <time>{{ article.data.date | date_to_datetime }}</time>
      {% if article.data.category %}
        â€¢ <a class="category" href="/blog/{{ article.data.category }}">{{ article.data.category }}</a>
      {% endif %}
    </div>
    <p class="excerpt">{{ article.data.excerpt }}</p>
    <a href="{{ article.url | url }}" class="read-more">Read more</a>
  </article>
{% endfor %}
</div>