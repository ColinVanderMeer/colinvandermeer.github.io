<div class="article-list">
  {% for article in articles | reverse %}
    <div class="article-card">
      <h2><a href="{{ article.url | url }}">{{ article.data.title }}</a></h2>
      <div class="date">{{ article.data.date | date_to_datetime }}
        {% if article.data.tags %}

              <span>-- Tags: 
                  {% for tag in article.data.tags %}
                      <span class="tag"><a href="/blog/tagged/{{ tag }}/">{{ tag }}</a></span>{% if not loop.last %}, {% endif %}
                  {% endfor %}
              </span>
          {% endif %}
      </div>
      <div class="excerpt">{{ article.data.description }}</div>
    </div>
  {% endfor %}
  </div>