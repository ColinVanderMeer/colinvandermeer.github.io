<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title or metadata.title }}</title>
  </head>

  <style>
    body {
      background-color: #151729;
    }
    .content {
    max-width: 1000px;
    margin: 0 auto;
    padding: 1px 20px;
    background-color: #5e65ad;
    border-radius: 20px;
    }
  </style>

  <body>
    <main role="main">
      <div class="content">
        {% include "../components/header.njk" %}
        {{ content | safe }}
      </div>
    </main>
  </body>
</html>