---
layout: page
---

<style>
  .article {
    margin: 40px 0;
  }

  h1 {
    font-size: 2.5em;
    margin: 0 0 10px;
  }

  .article-header {
    border-bottom: 1px dotted #000;
    margin-bottom: var(--spacing-sm);
  }

  .article-header p {
    margin-bottom: 0px
  }

</style>

<article class="article">
  <div class="article-header">
  <h1>{{ title }}</h1>
  <p>
    Published: <time>{{ date | date_to_datetime }}</time>
  </p>
  </div>
  {{ content | safe }}
</article>